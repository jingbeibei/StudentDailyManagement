<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nuc.jingbeibei.studentdailymanagement.ui.home.AskForLeaveActivity">
    <include layout="@layout/toolbar_mybar"></include>
<TextView
    android:id="@+id/id_student_name_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="请假人xxx"
    android:gravity="center"
    />
    <EditText
    android:id="@+id/id_leave_reason_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="请假原因"
    />
    <EditText
        android:id="@+id/id_parent_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="父母姓名"
        />
    <EditText
        android:id="@+id/id_parent_telephoneNo_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="父母联系方式"
        />
    <EditText
        android:id="@+id/id_home_address_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="家庭联系地址"
        />
    <TextView
        android:id="@+id/id_leave_start_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始时间"
        />
    <TextView
        android:id="@+id/id_leave_end_time_text"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结束时间"
        />
    <TextView
        android:id="@+id/id_leave_counselor_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="审批者"
        />
    <Button
        android:id="@+id/id_ask_for_leave_commit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="请假"
        />

</LinearLayout>
