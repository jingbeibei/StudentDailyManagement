<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nuc.jingbeibei.studentdailymanagement.ui.home.PublishSignActivity">
<EditText
    android:id="@+id/id_sign_title_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="标题"
    android:gravity="center"
    />
    <TextView
        android:id="@+id/id_teacher_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="赵老师"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/id_leave_start_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始时间"
        />
    <TextView
        android:id="@+id/id_leave_end_time_text"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结束时间"
        />
    <TextView
        android:id="@+id/id_myplace_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的地点"
        />
  <TextView
      android:id="@+id/id_select_class_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="选择班级"
      android:gravity="center"
      />
<Button
    android:id="@+id/id_publish_sign_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="发布"
    />

</LinearLayout>
