<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nuc.jingbeibei.studentdailymanagement.ui.home.AskForLeaveActivity">
    <include layout="@layout/toolbar_mybar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假人："
            />
        <TextView
            android:id="@+id/id_student_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="请假原因："/>
    <EditText
        android:id="@+id/id_leave_reason_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
       android:lines="3"
        android:gravity="top"
        android:background="@drawable/textview_border"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="父母姓名："/>
        <EditText
            android:id="@+id/id_parent_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="父母联系方式："/>
        <EditText
            android:id="@+id/id_parent_telephoneNo_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="家庭地址："/>
        <EditText
            android:id="@+id/id_home_address_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="时间："/>
       <TextView
           android:id="@+id/id_leave_start_time_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:background="@drawable/textview_border"
           android:textColor="@color/gray"
           android:text="  开始时间  "
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:text="  --  "/>
       <TextView
           android:id="@+id/id_leave_end_time_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/textview_border"
           android:textColor="@color/gray"
           android:text="  结束时间  "
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="审批者："/>
        <TextView
            android:id="@+id/id_leave_counselor_name_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            />
    </LinearLayout>


    <Button
        android:id="@+id/id_ask_for_leave_commit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:background="@drawable/login_button"
        android:textColor="@color/colorWhite"
        android:text="请假"
        />

</LinearLayout>
